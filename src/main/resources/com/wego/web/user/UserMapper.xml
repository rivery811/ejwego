<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.wego.web.usr.UserMapper">

	<select id="createUser" parameterType="map">
		${CREATE_TABLE}
	</select>
	
	<select id="dropUser" parameterType="map">
		${DROP_TABLE}
	</select>
	
	<select id="createDB" parameterType="hashmap">
		${CREATE_DB}
	</select>
	
	<select id="truncate" parameterType="hashmap">
		${TRUNCATE}
	</select>
	
    <select id="selectUserByIdPw" resultType="User" >
     select *
	from user
	where uid like #{uid}
	and pwd like #{pwd}
    </select>
    
 
      <insert id="insertUser" parameterType="User">
       insert into user (uid, pwd, uname, birth, gender, tel, pettype) values (
          #{uid}, #{pwd}, #{uname},#{birth}, #{gender}, #{tel}, #{pettype}
      )
   </insert>
 
 
    <select id="existId" resultType="int"> 
      select count(*)
      from user
      where uid like #{uid}
    </select>
    
      <select id="countUsers" resultType="int" >
     select count(*)
	from user
    </select>
    
</mapper>